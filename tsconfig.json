{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "types": [
            "arcgis-js-api",
            "dojo"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": false,
        "jsx": "react"
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}